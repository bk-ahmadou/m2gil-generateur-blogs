@{
    ViewData["Title"] = "Bienvenue";
}

@model IEnumerable<Blog>

<section class="bg-[#FCF8F1] bg-opacity-30 py-10 sm:py-16 lg:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 items-center gap-12 lg:grid-cols-2">
      <div>
        <p class="text-base font-semibold uppercase tracking-wider text-blue-600">Un Blog pour Apprendre</p>
        <h1 class="mt-4 text-4xl font-bold text-black sm:text-6xl lg:mt-8 xl:text-8xl">Connectez-vous & Apprenez des Experts</h1>
        <p class="mt-4 text-base text-black sm:text-xl lg:mt-8">Mettez un plus dans votre Carriere.</p>

        <a href="#" title="" class="mt-8 inline-flex items-center rounded-full bg-yellow-300 px-6 py-4 font-semibold text-black transition-all duration-200 hover:bg-yellow-400 focus:bg-yellow-400 lg:mt-16" role="button">
          Commencez à nous lire
          <svg class="ml-8 -mr-2 h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </a>

        <p class="mt-5 text-gray-600">Vous nous avez déjà rejoint? <a href="#" title="" class="text-black transition-all duration-200 hover:underline">Connectez-vous</a></p>
      </div>

      <div>
        <img class="w-full" src="https://cdn.rareblocks.xyz/collection/celebration/images/hero/1/hero-img.png" alt="" />
      </div>
    </div>
  </div>
</section>
<section class="bg-white py-12 sm:py-16 lg:py-20 xl:py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-semibold tracking-tight text-gray-900 sm:text-4xl lg:text-5xl">Dernières nouvelles de notre blog</h2>
    </div>

    <div class="mx-auto mt-12 grid max-w-2xl grid-cols-1 gap-5 sm:mt-16 sm:gap-6 lg:mt-20 xl:max-w-none xl:grid-cols-2">
      @foreach(var blog in Model){
        <div class="group flex flex-col rounded-2xl border border-gray-200 bg-white p-6 transition-all duration-200 hover:shadow-lg sm:flex-row sm:items-stretch">
          <a asp-controller="Blogs" asp-action="BlogDetails" asp-route-id="@blog.Id" title="" class="flex shrink-0 overflow-hidden rounded-xl">
            <img class="h-44 w-full transform object-cover transition-all duration-200 group-hover:rotate-3 group-hover:scale-110" src="@blog.ImageUrl" alt="" />
          </a>

          <div class="mt-6 flex flex-1 flex-col sm:mt-0 sm:ml-8">
            <div class="flex-1">
              <p class="text-xs font-semibold uppercase tracking-widest text-blue-600">@blog.CreatedAt.ToString("dd MMMM yyyy")</p>
              <h3 class="mt-4 text-xl font-semibold leading-tight text-gray-900">
                <a asp-controller="Blogs" asp-action="BlogDetails" asp-route-id="@blog.Id" title="" class=""> @blog.Title </a>
              </h3>
            </div>

            <div class="mt-6 lg:mt-auto">
              <a href="#" title="" class="flex items-center text-base font-medium text-gray-600 hover:text-gray-900">
                <img class="mr-2.5 h-7 w-7 shrink-0 rounded-full object-cover" src="https://landingfoliocom.imgix.net/store/collection/saasui/images/blog/3/avatar-female-1.png" alt="" />
                Leslie Alexander
              </a>
            </div>
          </div>
        </div>

      }
    </div>
  </div>
</section>
