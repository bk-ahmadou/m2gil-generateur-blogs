@{
  ViewData["Title"] = "Mes Articles";
}

@model IEnumerable<Post>

<section class="py-12 bg-white sm:py-16 lg:py-20">
  <div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-7xl">
    <div class="grid grid-cols-2">
      <div class="max-w-md">
        <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">Mes Artircles </h2>
        <p class="mt-4 text-sm font-normal leading-6 text-gray-500">Voici l'ensemble des Blogs qui vous appartienne.</p>
        <div class="mt-5">
          <a asp-controller="Posts" asp-action="Index" title="" class="inline-flex items-center text-base font-medium text-gray-900 group">
            Voir tous les articles
            <svg class="w-5 h-5 ml-2 transition-all duration-200 transform group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
      @if (ViewBag.HasBlog)
      {
        <div>
          <a asp-controller="Posts" asp-action="AddPost" type="submit" class="border border-gray-300 rounded py-2 px-2" style="position:relative; float:right">Ajouter un Post</a>
        </div>
      }
    </div>
    <div class="grid grid-cols-1 mt-16 lg:mt-20 lg:grid-cols-2 gap-y-12 lg:gap-y-16 lg:gap-x-32 xl:mt-24">
      @foreach (var blog in Model)
      {
        <div class="flex items-center">
          <a asp-area="" asp-controller="Posts" asp-action="PostDetails" asp-route-id="@blog.Id" title="" class="shrink-0">
            <img class="w-28 h-28 rounded-xl object-cvoer" src="@blog.ImageUrl" alt="" />
          </a>

          <div class="flex-1 ml-8">
            <div class="flex items-center space-x-2">
              <p class="text-sm font-medium text-gray-900">
                <a href="#" title="" class=""> @blog.Category </a>
              </p>
              <span class="text-sm font-medium text-gray-900"> •  </span>
              <p class="text-sm font-medium text-gray-900">@blog.CreatedAt.ToString("dd MMMM yyyy")</p>
            </div>
            <p class="max-w-xs mt-3 text-xl font-bold text-gray-900 group-hover:text-gray-600">
              <a asp-area="" asp-controller="Posts" asp-action="UpdatePost" asp-route-id="@blog.Id" title="" class="">@blog.Title</a>
            </p>
            <div class="mt-6">
              <a asp-controller="Posts" asp-action="UpdatePost" asp-route-id="@blog.Id" class="group inline-flex items-center border-b border-gray-900 pb-2 text-xs font-bold uppercase tracking-widest text-gray-900">
                Editer
                <svg class="ml-2 h-4 w-4 transform transition-all duration-200 group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      }
    </div>
  </div>
</section>
