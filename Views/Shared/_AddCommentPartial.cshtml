@model Comment
<form method="post" asp-controller="Posts" asp-action="AddComment" asp-route-id="@Model.Post.Id">
  <div class="mt-4">
    <label for="fullName" class="text-base font-medium text-gray-900"> Commentaires </label>
    <div class="mt-2">
      <textarea asp-for="Value" class="block w-full rounded-xl border border-gray-200 bg-white px-4 py-4 text-base text-gray-900 focus:border-blue-600 focus:outline-none focus:ring-1 focus:ring-blue-600" />
      </textarea>
    </div>
  </div>
  <div class="mt-4">
    <button type="submit" class="inline-flex rounded-md border border-transparent bg-indigo-600 px-6 py-2 text-sm font-semibold leading-5 text-white transition-all duration-200 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2">Envoyer</button>
  </div>
</form>