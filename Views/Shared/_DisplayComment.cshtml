@model ICollection<Comment>

@foreach (var item in Model)
{
  <div class="mt-4">
    <div>
      <blockquote class="text-sm italic font-semibold text-gray-900 dark:text-white">
        <p>@item.Value</p>
        <div class="flex items-center mt-4 space-x-4">
          <img class="w-10 h-10 rounded-full mr-2" src="https://flowbite.com/docs/images/people/profile-picture-5.jpg" alt="">
          <div class="font-medium dark:text-white">
            <div>@item.User.FirstName @item.User.LastName</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">Joined in August 2014</div>
          </div>
        </div>
      </blockquote>
    </div>
  </div>
  <hr class="w-48 h-1 mt-4 mx-auto my-4 bg-gray-100 border-0 rounded md:my-10 dark:bg-gray-700">

}
