      <nav class="relative flex h-16 items-center justify-between bg-white lg:h-24 lg:rounded-md lg:px-8 lg:py-6 lg:shadow-lg">
        <div class="flex-shrink-0">
          <a asp-area="" asp-controller="Home" asp-action="Index" class="flex">
            <img class="h-8 w-auto lg:h-10" src="https://cdn.rareblocks.xyz/collection/celebration/images/logo.svg" alt="" />
          </a>
        </div>

        <button type="button" class="ml-5 inline-flex rounded-md p-2 text-black transition-all duration-200 hover:bg-gray-100 focus:bg-gray-100 lg:hidden">
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
          </svg>

        </button>

        <div class="ml-10 hidden lg:mr-auto lg:flex lg:items-center lg:space-x-10">
          <a asp-controller="Posts" asp-action="Index" class="text-base font-medium text-black transition-all duration-200 hover:text-blue-600 focus:text-blue-600">Acceuil</a>
        </div>

        <partial name="_LoginPartial"/>
      </nav>

      <!-- xs to lg -->
      <nav class="flex flex-col space-y-2 py-4 lg:hidden">
        <a href="#" title="" class="py-2 text-base font-medium text-black transition-all duration-200 focus:text-blue-600"> Our Team </a>
